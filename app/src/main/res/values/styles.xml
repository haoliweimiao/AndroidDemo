<resources xmlns:tools="http://schemas.android.com/tools">

    <!--   dialog fragment -->
    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@drawable/bg_ui_dialog</item>
    </style>

    <style name="Dialog.FullScreen.NoDim">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <!--左边边距-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#2A2A35</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#7AC143</item>
        <item name="background">@color/hlw_ui_theme_bg_color</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/ToolBar</item>+
        <!--为了解决白屏问题-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="LineTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/hlw_ui_color_line</item>
    </style>

    <style name="SubtitleTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hlw_ui_subtitle_height</item>
        <item name="android:background">@color/hlw_ui_color_bg_subtitle</item>
    </style>

    <style name="SubtitleIconTheme">
        <item name="android:layout_width">@dimen/hlw_ui_subtitle_left_icon</item>
        <item name="android:layout_height">@dimen/hlw_ui_subtitle_left_icon</item>
        <item name="android:layout_marginStart">@dimen/hlw_ui_subtitle_left_padding</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SubtitleTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/hlw_ui_txt_subtitle_size</item>
        <item name="android:textColor">@color/hlw_ui_color_subtitle</item>
        <item name="android:layout_marginStart">@dimen/hlw_ui_subtitle_text_left_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubtitleRightIconTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/hlw_ui_subtitle_right_icon_padding</item>
    </style>

    <style name="SubtitleRightTextTheme">
        <item name="android:layout_width">@dimen/hlw_ui_subtitle_right_text_max_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">48</item>
        <item name="android:textSize">@dimen/hlw_ui_txt_subtitle_size</item>
        <item name="android:textColor">@color/hlw_ui_color_subtitle_right</item>
        <item name="android:layout_marginRight">@dimen/hlw_ui_subtitle_right_text_padding</item>
    </style>

    <style name="SubtitleRightSwitchTheme">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:switchMinWidth">120dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/hlw_ui_subtitle_right_switch_padding</item>
        <item name="android:background">@null</item>
        <item name="android:thumb">@null</item>
        <item name="android:track">@drawable/bg_switch</item>
    </style>

    <style name="DialogEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hlw_ui_color_dialog_edit_line_normal</item>
        <item name="colorControlActivated">@color/hlw_ui_color_dialog_edit_line_normal</item>
    </style>

</resources>