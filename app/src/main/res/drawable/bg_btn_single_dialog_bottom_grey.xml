<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="12.5dp" android:bottomRightRadius="12.5dp" />

            <stroke android:width="1dp" android:color="#cccccc" />

            <gradient android:centerColor="#cccccc" android:endColor="#cccccc" android:startColor="#cccccc" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="12.5dp" android:bottomRightRadius="12.5dp" />

            <stroke android:width="1dp" android:color="#cccccc" />

            <gradient android:centerColor="#eeeeee" android:endColor="#eeeeee" android:startColor="#eeeeee" />
        </shape>
    </item>


</selector>